{
    "openapi": "3.0.0",
    "info": {
        "title": "Api Teste",
        "description": "Api teste para o programa de estágio Aiko",
        "contact": {
            "name": "João Lapa",
            "email": "joaomanoel1996@hotmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://api.aiko.test/api/v1",
            "description": "Servidor padrão da api"
        }
    ],
    "paths": {
        "/paradas": {
            "get": {
                "tags": [
                    "Paradas"
                ],
                "summary": "Lista de paradas",
                "description": "Retorna uma lista, em formato JSON, com todas as paradas cadastradas",
                "operationId": "App\\Http\\Controllers\\Api\\V1\\Admin\\ParadaController::index",
                "responses": {
                    "200": {
                        "description": "Operação bem-sucedida",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ParadaResource"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Paradas"
                ],
                "summary": "Persiste nova parada",
                "description": "Retorna, em formato JSON, dados da nova parada criada",
                "operationId": "App\\Http\\Controllers\\Api\\V1\\Admin\\ParadaController::store",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ParadaRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Operação bem-sucedida",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Parada"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Não autorizado"
                    },
                    "422": {
                        "description": "Entidade não processável"
                    }
                }
            }
        },
        "/paradas/{id}": {
            "get": {
                "tags": [
                    "Paradas"
                ],
                "summary": "Informação de parada",
                "description": "Retorna dados de uma parada",
                "operationId": "App\\Http\\Controllers\\Api\\V1\\Admin\\ParadaController::show",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Parada id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação bem-sucedida",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Parada"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Não Autorizado"
                    },
                    "404": {
                        "description": "Recurso não encontrado"
                    }
                }
            },
            "put": {
                "tags": [
                    "Paradas"
                ],
                "summary": "Atualiza parada existente",
                "description": "Retorna dados de uma parada atualizada",
                "operationId": "App\\Http\\Controllers\\Api\\V1\\Admin\\ParadaController::update",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Parada id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ParadaRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Operação bem-sucedida",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Parada"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Não autorizado"
                    },
                    "404": {
                        "description": "Recurso não encontrado"
                    },
                    "422": {
                        "description": "Entidade não processável"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Paradas"
                ],
                "summary": "Exclui parada existente",
                "description": "Exclui uma parada e não retorna nenhum conteúdo",
                "operationId": "App\\Http\\Controllers\\Api\\V1\\Admin\\ParadaController::destroy",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Parada id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Operação bem sucedida",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado"
                    },
                    "404": {
                        "description": "Recurso não encontrado"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Lista de usuários",
                "operationId": "App\\Http\\Controllers\\Api\\V1\\Admin\\UserController::index",
                "responses": {
                    "200": {
                        "description": "Uma lista com todos os usuários cadastrados",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "401": {
                        "description": "Acesso não autorizado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ParadaRequest": {
                "title": "ParadaRequest",
                "description": "Dados do corpo da ParadaRequest",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "title": "Name",
                        "description": "Nome de uma parada",
                        "type": "string",
                        "example": "Final de linha da Pituba"
                    },
                    "latitude": {
                        "title": "Latitude",
                        "description": "Latitude da posição geográfica da parada",
                        "type": "number",
                        "format": "double(6,6)",
                        "example": "-12.994757"
                    },
                    "longitude": {
                        "title": "Longitude",
                        "description": "Longitude da posição geográfica da parada",
                        "type": "number",
                        "format": "double(6,6)",
                        "example": "-38.4612137"
                    }
                },
                "type": "object"
            },
            "ParadaResource": {
                "title": "ParadaResource",
                "description": "Recurso parada",
                "properties": {
                    "data": {
                        "title": "Data",
                        "description": "Wrapper de dados",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Parada"
                        }
                    }
                },
                "type": "object",
                "xml": {
                    "name": "ParadaResource"
                }
            },
            "Parada": {
                "title": "Parada",
                "description": "model Parada",
                "properties": {
                    "id": {
                        "title": "ID",
                        "description": "Identificador único",
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "title": "Name",
                        "description": "Nome de uma parada",
                        "type": "string",
                        "example": "Final de linha da Pituba"
                    },
                    "latitude": {
                        "title": "Latitude",
                        "description": "Latitude da posição geográfica da parada",
                        "type": "number",
                        "format": "double(6,6)",
                        "example": "-12.994757"
                    },
                    "longitude": {
                        "title": "Longitude",
                        "description": "Longitude da posição geográfica da parada",
                        "type": "number",
                        "format": "double(6,6)",
                        "example": "-38.461213"
                    },
                    "created_at": {
                        "title": "Created at",
                        "description": "Data de criação do registro no banco de dados em formato UTC",
                        "type": "string",
                        "format": "datetime",
                        "example": "2020-07-11 16:30:45"
                    },
                    "updated_at": {
                        "title": "Updated at",
                        "description": "Data da última atualização do registro no banco de dados em formato UTC",
                        "type": "string",
                        "format": "datetime",
                        "example": "2020-07-11 16:30:45"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Project"
                }
            }
        },
        "responses": {
            "401": {
                "description": "Não autorizado"
            },
            "500": {
                "description": "Erro interno do servidor"
            }
        }
    },
    "tags": [
        {
            "name": "Paradas",
            "description": "Conjunto de endpoints com operações de CRUD para Paradas"
        },
        {
            "name": "Users",
            "description": "Conjunto de endpoints com operações de CRUD para Usuários"
        }
    ]
}